{
    "manifest_version": 3,
    "name": "P O M O D O R O F L O W",
    "version": "1.0",
    "description": "Be focus, take a coffee ! ! !",
    "permissions": ["storage", "notifications", "idle"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "scripts/background.js"
    }
  }
  